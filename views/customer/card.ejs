<% include ../partials/header %>
<br>
<form action="/customer/<%=campaign[0].title%>/redeem?_method=PUT" method="POST" name="Redeem_form"></form>
<div class="row">
	<div class="col-sm-4"></div>
	<div class="col-sm-4 stamp-position">

		<div class="stamp-card p-4">

			<h3 class="stamping-logo">#<%= campaign[0].title %></h3>
			<!-- TÄMÄN SAA JA PITÄÄKIN KORVATA OMALLA TOTEUTUKSELLA. -->
<div class="d-flex justify-content-center">

			<table style="border: 3px solid white; border-collapse: collapse;">
				<% for(var i = 0; i < campaign[0].stamps_needed; i++) { %>
					<% if((i % 2) === 0) { %>
					<tr>
						<td class="stamp-position" style="border: 3px solid white;  width:100px; height:100px;">
						<% if(i < stamps.length) { %>
							<i class="fas fa-coffee"></i>
						<% } %>
						</td>
					<% } else { %>
						<td class="stamp-position" style="border: 3px solid white;  width:100px; height:100px;">
						<% if(i < stamps.length) { %>
							<i class="fas fa-coffee"></i>
						<% } %>
						</td>
					</tr>
					<% } %>
				<% } %>
			</table>
</div>
<br>
			<div class="row d-flex justify-content-center">
				<div class="col-sm-6">
					<% if(campaign[0].stamps_needed <= stamps.length) { %>
						<a href="/customer/<%=campaign[0].title%>/redeem" class="btn">Redeem reward SHOW FLASH OR SHOW VALIDITY ANIMATION</a>
					<% } %>
				</div>
			</div>
		</div>

<br>
<br>
	</div>
	<div class="col-sm-3">
		<div class="card p-3">
			<p>user object for debugging: <%= user %></p>
		</div>
		<div class="card p-3">
			<p>campaign object for debugging: <%= campaign %></p>
		</div>
		<div class="card p-3">
			<p>stamps object for debugging: <%= stamps %></p>
		</div>
	</div>


</div>



<% include ../partials/footer %>
