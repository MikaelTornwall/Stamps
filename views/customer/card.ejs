					<% } else { %>
						<td style="border: 1px solid black;  width:100px; height:100px;">
						<% if(i < card.stamps.length) { %>
							<i class="fas fa-coffee"></i>
						<% } %>
						</td>
					</tr>
					<% } %>
				<% } %>
