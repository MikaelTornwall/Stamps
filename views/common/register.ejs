<% include ../partials/header %>

<br>
<br>

<div class="row">
	<div class="col-sm-3"></div>
	<div class="col-sm-6">
		<div class="card p-3 login-style">
			<h2 class="login-heading">Customer registration</h2>
			<div class="login register">
				<span>
					<form data-toggle="validator" action="/register/customer" method="post">
						<div class="form-group">
							<label for="username">Username</label>
							<input type="text" class="form-control" name="username" placeholder="Username" required>
							<small id="passwordHelpBlock" class="form-text text-muted">Hover over the eye icon to temporarily reveal your password</small>
							<label class="pt-2" for="username">Email</label>
							<input type="email" class="form-control" name="email" placeholder="example@gmail.com" data-error="Email needs to of form: example@gmail.com" required>
							<small id="emailTip" class="form-text text-muted">Your email is only used for resetting a forgotten password. Your privacy matters to us.</small>
							<label class="pt-2" for="password">Password</label>
							<div class="input-group-prepend">
      							<div class="input-group-text" onmouseover="document.getElementById('inputPassword').type='text'" onmouseout="document.getElementById('inputPassword').type='password'"><i class="fas fa-eye"></i></div>
							<input type="password" class="form-control" name="password" placeholder="password" id="inputPassword"  required>
							</div>
							<small id="passwordTip" class="form-text text-muted">Hover over the eye icon to temporarily reveal your password</small>
						</div>
						<input type="submit" class="btn mt-2" value="Sign up">
					</form>
				</span>
			</div>
		</div>
	</div>
</div>
<% include ../partials/footer %>
